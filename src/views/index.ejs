<!DOCTYPE html>
<html>
  <%- include('./partials/head') %>
  <body>
    <!-- Navbar (sit on top) -->
    <%- include('./partials/nav') %>
    <!-- Header -->
    <%- include('./partials/header') %>
    <!-- Page content -->
    <div class="ps-content">
      <!-- About Section -->
      <%- include('./partials/about') %>
      <hr />
      <!-- Menu Section -->
      <div class="ps-row ps-padding-64" id="menu">
        <div class="ps-col l6 ps-padding-large">
          <h1 class="ps-center">Nuentro Menu</h1>
          <br />
          <% platos.forEach(element => { %>
            <h4><a href="/detalle/<%= element.id %>"> <%= element.title %></a> </h4>
            <p class="ps-text-grey"> <%= element.description %> <%= element.price %> </p>
          <% }) %>
        </div>
          
      

      <!-- Footer -->
      <%- include('./partials/footer') %>
    </div>
  </body>
</html>
